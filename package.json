{
	"name": "konveyor-scm-poc",
	"displayName": "Konveyor SCM PoC",
	"version": "0.0.1",
	"publisher": "Konveyor",
	"private": true,
	"license": "Apache-2.0",
	"repository": {
		"type": "git",
		"url": ""
	},
	"engines": {
		"vscode": "^1.93.0",
		"node": ">=20.13.0",
		"npm": "^9.5.0 || ^10.5.2"
	},
	"categories": [
		"SCM Providers"
	],
	"activationEvents": [
		"onStartupFinished"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.source-control.open",
				"title": "Open Konveyor suggestions"
			},
			{
				"command": "extension.source-control.commit",
				"title": "Apply Konveyor suggestions",
				"icon": {
					"light": "resources/icons/light/check.svg",
					"dark": "resources/icons/dark/check.svg"
				}
			},
			{
				"command": "extension.source-control.refresh",
				"title": "Refresh Konveyor suggestions",
				"icon": {
					"light": "resources/icons/light/refresh.svg",
					"dark": "resources/icons/dark/refresh.svg"
				}
			},
			{
				"command": "extension.source-control.discard",
				"title": "Discards local changes to Konveyor suggestions",
				"icon": {
					"light": "resources/icons/light/discard.svg",
					"dark": "resources/icons/dark/discard.svg"
				}
			},
			{
				"command": "extension.source-control.checkout",
				"title": "Request new suggestions.",
				"icon": {
					"light": "resources/icons/light/refresh.svg",
					"dark": "resources/icons/dark/refresh.svg"
				}
			}
		],
		"menus": {
			"scm/title": [
				{
					"command": "extension.source-control.commit",
					"group": "navigation",
					"when": "scmProvider == konveyor"
				},
				{
					"command": "extension.source-control.discard",
					"group": "navigation",
					"when": "scmProvider == konveyor"
				},
				{
					"command": "extension.source-control.refresh",
					"group": "navigation",
					"when": "scmProvider == konveyor"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint \"src/**/*.ts\"",
		"watch": "tsc -watch -p ./"
	},
	"dependencies": {},
	"devDependencies": {
		"@types/node": "^20",
		"@types/vscode": "^1.73.0",
		"@typescript-eslint/eslint-plugin": "^7.14.0",
		"@typescript-eslint/parser": "^7.14.0",
		"eslint": "^8.26.0",
		"typescript": "^5.6.2"
	}
}